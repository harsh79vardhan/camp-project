<% layout('layouts/boilerplate') %>
<h1 style="text-align: center;">ALL CAMPGROUNDS</h1>
<a href="/campgrounds/new" style="display: block; text-align: center; margin-bottom: 20px;">ADD CAMPGROUND</a>
<div style="display: flex; flex-wrap: wrap;">
    <% for(let camps of campgrounds){ %>
        <div style="width: 100%; margin: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; display: flex;">
            <div style="flex: 1;">
                <img src="<%=camps.image%>" alt="" style="width: 100%; height: auto; border-radius: 5px;">
            </div>
            <div style="flex: 1; padding: 10px;">
                <h3 style="font-size: 18px;"><%=camps.title%></h3>
                <p><%=camps.description%></p>
                <a href="/campgrounds/show/<%=camps._id%>" style="text-decoration: none; color: #333; display: block; text-align: center; margin-top: 10px;">View Details</a>
            </div>
        </div>
    <%}%>
</div>
